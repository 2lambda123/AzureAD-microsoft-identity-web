{
    //    "AzureAd-EasyAuth": {
    "AzureAd": {
        // See https://docs.microsoft.com/en-us/azure/app-service/configure-authentication-provider-aad#-configure-with-express-settings
        "Instance": "https://login.microsoftonline.com/",
        "TenantId": "Tenant-Id",
        "ClientId": "Client-Id",
        //"Authority": "https://login.microsoftonline.com/Tenant-Id",
        "CallbackPath": "/",
        // "CallbackPath": "/.auth/login/aad/callback",
        // To call an API
        "ClientSecret": "Enter_the_secret_from_app_registration"
    },

    "GraphBeta": {
        "BaseUrl": "https://graph.microsoft.com/beta",
        "Scopes": "user.read"
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Debug",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    "AllowedHosts": "*"
}
