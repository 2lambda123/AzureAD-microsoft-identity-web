<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Native library for token validation</Description>
    <PackageTags>MSAL;Microsoft Identity Web;Native</PackageTags>
    <Version>1.0.0</Version>
    <TargetFramework>net7.0</TargetFramework>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PublishAot>true</PublishAot>

    <!-- Help debugging ILTrimming issues -->
    <IlcGenerateCompleteTypeMetadata>true</IlcGenerateCompleteTypeMetadata>
    <!--<PublishTrimmed>false</PublishTrimmed>-->
  </PropertyGroup>

  <ItemGroup>
    <RdXmlFile Include="rd.xml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.DotNet.ILCompiler" Version="7.0.0-rc.1.22426.10" />
    <PackageReference Include="Microsoft.IdentityModel.JsonWebTokens" Version="6.23.1" />
    <PackageReference Include="Microsoft.IdentityModel.Validators" Version="6.23.1" />
  </ItemGroup>

</Project>
